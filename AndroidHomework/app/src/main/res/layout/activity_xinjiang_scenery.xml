<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".XinjiangScenery">
    <ScrollView
        android:layout_width="409dp"
        android:layout_height="729dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="天山景色"
                android:textSize="40dp"
                android:textColor="@color/black"
                android:gravity="center"
                />
            <ImageView
                android:id="@+id/headimg2"
                android:layout_width="match_parent"
                android:layout_height="400dp"
                app:srcCompat="@drawable/tianshan_1" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/username2"
                android:text="@string/tianshan"
                android:textSize="20dp"
                />

            <ImageView
                android:id="@+id/headimg21"
                android:layout_width="match_parent"
                android:layout_height="400dp"
                app:srcCompat="@drawable/tianshan_2" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="赛里木湖"
                android:textSize="40dp"
                android:textColor="@color/black"
                android:gravity="center"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/sailimuhu"
                android:textSize="20dp"/>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="400dp"
                app:srcCompat="@drawable/sailimu_1" />

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="400dp"
                app:srcCompat="@drawable/sailimu_2" />




        </LinearLayout>

    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>